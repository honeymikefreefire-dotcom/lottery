  <script>
    // quick green flash when page loads
    const flash = document.getElementById('flash');
    requestAnimationFrame(() => {
      flash.style.transition = 'opacity .35s ease-out';
      flash.style.opacity = '0.3';
      setTimeout(() => flash.style.opacity = '0', 60);
    });

    // optional: let user toggle fullscreen for dramatic effect
    const fsBtn = document.getElementById('fsBtn');
    fsBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const d = document.documentElement;
      if (!document.fullscreenElement) d.requestFullscreen?.();
      else document.exitFullscreen?.();
    });

    // tiny beep (web audio) for extra drama – volume is low
    try {
      const ctx = new (window.AudioContext || window.webkitAudioContext)();
      const o = ctx.createOscillator(); const g = ctx.createGain();
      o.type = 'square'; o.frequency.value = 440; g.gain.value = 0.02;
      o.connect(g); g.connect(ctx.destination); o.start();
      setTimeout(()=>{ o.stop(); ctx.close(); }, 120);
    } catch {}
  </script>
